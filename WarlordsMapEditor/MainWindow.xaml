        xmlns:local="clr-namespace:WarlordsMapEditor"
        xmlns:diag="clr-namespace:System.Diagnostics;assembly=WindowsBase"
        xmlns:mousebehav="clr-namespace:MouseNamespace"
        mc:Ignorable="d"
        Title="Warlords Map Editor" Height="800" Width="1000"
        >
